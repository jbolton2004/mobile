<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.gracetastybites.restaurant.ui.customer.menu.MenuFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menuFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.gracetastybites.restaurant.ui.orders.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/staffFragment"
        android:name="com.gracetastybites.restaurant.ui.staff.StaffFragment"
        android:label="Staff"
        tools:layout="@layout/fragment_staff" />

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.gracetastybites.restaurant.ui.customer.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />

</navigation>